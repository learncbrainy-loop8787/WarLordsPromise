<% title 'All Soldiers'%>
<%=link_to "Top Ten Soldiers!", soldiers_top_ten_path %>
     <span>
        <%= form_tag soldiers_path, method:'get' do %>
        <h3><%= label_tag (:soldier), "Enter Name of Soldier:"%></h3>
        <%= text_field_tag :soldier, params[:name], placeholder:"Enter name"%>
        <%= submit_tag "Search", name: nil%>
          <% end %>
            </span>
<div class="container">
  <div class="row">
    <% @soldiers.each do |soldier| %>
      <div class="col-md-4">
        <div class="card" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title"><%= soldier.name %></h5>
            <%= link_to "View", user_soldier_path(soldier.general_name,soldier), class: 'btn btn-primary' %>
       
          </div>
        </div>
      </div>
    <% end %>
 </div>
</div>